@using OnlineShop2022.Areas.Admin.Models
@model List<ManageUserRoleViewModel>

@{
    ViewData["Title"] = "Manage";
}

<form method="post">
    <div class="card">    
        <div class="card-header">
            <h2>Manage @Model.FirstOrDefault().User.FName 's Roles</h2>
            <!--Add unique sure ID-->
        </div>
        <div class="card-body">
            @for (var i = 0; i < Model.Count; i++)
            {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].Role.Name" />
                <input type="hidden" asp-for="@Model[i].User.Id" />
                <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsInRole">
                <lable class="form-check-lable">
                    @Model[i].Role.Name
                </lable>
            </div>
            }
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Update</button>
            <a class="btn btn-danger" asp-action="Index">Cancle</a>
        </div>
    </div>
</form>